# ShareBuddy Backend Environment Variables
# Copy to .env and configure with your actual values

NODE_ENV=development
PORT=5001

# Database
DB_HOST=
DB_PORT=5432
DB_NAME=sharebuddy_db
DB_USER=postgres
DB_PASSWORD=

# JWT
JWT_SECRET=sharebuddy-super-secret-jwt-key-change-in-production-2024
JWT_EXPIRES_IN=7d

# Security
BCRYPT_SALT_ROUNDS=12
SESSION_SECRET=sharebuddy-session-secret-2024

# File Upload
UPLOAD_PATH=uploads
MAX_FILE_SIZE=10485760
MAX_AVATAR_SIZE=5242880

# CORS
FRONTEND_URL=http://localhost:3000

# Rate Limiting
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100