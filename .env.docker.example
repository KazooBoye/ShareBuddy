# .env.example for Docker Deployment
# Copy this file to .env and fill in your actual values

# ============================================================
# REQUIRED - Database Configuration
# ============================================================
DB_HOST=your-database-host
DB_PORT=5432
DB_NAME=sharebuddy_db
DB_USER=postgres
DB_PASSWORD=your-secure-database-password

# ============================================================
# REQUIRED - Security
# ============================================================
JWT_SECRET=your-super-secret-jwt-key-change-in-production-min-32-chars
SESSION_SECRET=your-session-secret-change-in-production-min-32-chars

# ============================================================
# MODULE 1: Email System (Nodemailer + Gmail)
# ============================================================
# Get Gmail App Password: https://myaccount.google.com/apppasswords
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-16-char-gmail-app-password
EMAIL_FROM=ShareBuddy <noreply@sharebuddy.com>
EMAIL_VERIFICATION_EXPIRES=24h
PASSWORD_RESET_EXPIRES=1h

# ============================================================
# MODULE 2: OAuth Authentication
# ============================================================
# Google OAuth - https://console.cloud.google.com/
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_CALLBACK_URL=http://localhost:5001/api/auth/google/callback

# Facebook OAuth - https://developers.facebook.com/
FACEBOOK_APP_ID=your-facebook-app-id
FACEBOOK_APP_SECRET=your-facebook-app-secret
FACEBOOK_CALLBACK_URL=http://localhost:5001/api/auth/facebook/callback

# ============================================================
# MODULE 3: Stripe Payment Gateway
# ============================================================
# Get keys from: https://dashboard.stripe.com/apikeys
# Start with test keys (sk_test_..., pk_test_...)
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# ============================================================
# Optional - Cloud Storage (for production)
# ============================================================
# Cloudinary - https://cloudinary.com/
CLOUDINARY_CLOUD_NAME=
CLOUDINARY_API_KEY=
CLOUDINARY_API_SECRET=

# ============================================================
# Optional - Advanced Configuration
# ============================================================
# Frontend URL
FRONTEND_URL=http://localhost:3000

# File Upload Limits
MAX_FILE_SIZE=10485760
MAX_AVATAR_SIZE=5242880

# Rate Limiting
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100
