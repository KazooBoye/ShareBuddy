# Frontend Environment Variables
# Create React App environment configuration
# Copy this to .env and configure with your values

# API Base URL
REACT_APP_API_URL=http://localhost:5001

# App Information
REACT_APP_APP_NAME=ShareBuddy
REACT_APP_VERSION=1.0.0

# Stripe (Public Key only - safe for frontend)
REACT_APP_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key

# Optional: Feature Flags
REACT_APP_ENABLE_OAUTH=true
REACT_APP_ENABLE_PAYMENT=true
REACT_APP_ENABLE_RECOMMENDATIONS=true
REACT_APP_ENABLE_QNA=true

# Optional: Analytics
# REACT_APP_GOOGLE_ANALYTICS_ID=UA-XXXXXXXXX-X
